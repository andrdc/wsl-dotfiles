alias ls='ls --color=auto'
# Display all directory entries, that begin with a dot.
alias l.='ls -d .* --color=auto'
# Display a long-format directory listing.
alias ll='ls -l --color=auto'
# Display all
alias la='ls -lA --color=auto'
# cd to dev.
alias D='cd /home/$USER/dev'
# cd to Library
alias L='cd /home/$USER/Documents/library'
# Alias to manage dotfiles
alias config='/usr/bin/git --git-dir=/home/$USER/.dotfiles/ --work-tree=/home/$USER'
# NVIM as VIM
alias vim='nvim'
